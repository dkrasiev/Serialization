<Window x:Class="Serialization.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Serialization"
        mc:Ignorable="d"
        Title="Serialization" Height="450" Width="800">
    <Grid>
        <StackPanel x:Name="Buttons" Margin="15px" >
            <StackPanel Orientation="Vertical">
                <Label x:Name="LoadedFile" HorizontalAlignment="Center" Content="Файл не загружен"></Label>
                <Button x:Name="LoadButton" Content="Load file" Click="Load_Click"/>
            </StackPanel>
            
            <StackPanel x:Name="SerializationButtons" Margin="0 15px">
                <Button x:Name="BinarySerialization" Content="Binary" Click="BinarySerialization_Click"/>
                <Button x:Name="XMLSerialization" Content="XML" Click="XMLSerialization_Click"/>
                <Button x:Name="JSONSerialization" Content="JSON" Click="JSONSerialization_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
